       else
         {
           err = add_arg (gpg, "-");
@@ -2397,7 +2432,7 @@ gpg_encrypt (void *engine, gpgme_key_t recp[], const char *recpstring,
         {
           err = add_arg (gpg, "--directory");
           if (!err)
-            err = add_arg (gpg, file_name);
+            err = add_file_name_arg (gpg, file_name);
         }
