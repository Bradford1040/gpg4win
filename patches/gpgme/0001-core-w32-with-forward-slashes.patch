         }
       if (!err)
         err = add_input_size_hint (gpg, ciph);
@@ -2293,9 +2319,18 @@ append_args_from_recipients_string (engine_gpg_t gpg,
         err = gpg_error (GPG_ERR_UNKNOWN_OPTION);
       else if (n) /* Not empty - use it.  */
         {
